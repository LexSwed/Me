{
  "name": "@lexswed/site",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": "^18"
  },
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "npm run dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src --fix",
    "format": "prettier . --write --ignore-unknown",
