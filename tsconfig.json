{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "jsx": "preserve",
    "jsxImportSource": "preact",
    "incremental": true
  }
}
