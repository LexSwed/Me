- 
*/

export const prerender = true;
---

<Layout title="Oleksandr Sh." description="UI engineer">
  <div class="bg-primary text-on-primary flex h-full flex-col justify-between">
    <header class="flex flex-col items-stretch gap-2 p-6 sm:p-8">
      <div class="flex flex-row items-center justify-between gap-4">
        <h1 class="xs:text-4xl text-3xl font-bold leading-[1.1em] md:text-6xl">
          Oleksandr Sh.
        </h1>
        <Logo class="h-12 w-12" aria-hidden="true" />
      </div>
      <div class="text-xl font-bold leading-[1.1em] sm:text-2xl md:text-3xl">
        Web Developer
      </div>
    </header>
    <PostsSection />
    <footer class="flex flex-row items-center justify-between p-6 sm:p-8">
      <a
        href="#contributions"
        class="bg-on-background text-on-primary outline-on-primary xs:h-14 ring-on-primary flex aspect-square h-12 items-center justify-center gap-2 rounded-full text-lg shadow-md outline-2 focus:outline-none focus:ring-2 sm:aspect-auto sm:px-4"
      >
        <span class="hidden sm:inline">More</span>
        <ChevronDoubleDown class="xs:h-5 h-4" aria-hidden="true" />
      </a>
      <SocialLinks class="md:gap-10" />
    </footer>
  </div>
  <div class="bg-stroke/10 h-px"></div>
  <div
    class="bg-background text-on-background sticky top-0 flex flex-col gap-12 p-8"
  >
    <Contributions />
  </div>
</Layout>
