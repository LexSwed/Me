---
import Contributions from "../components/Contributions.astro";
import MainSection from "../components/MainSection.astro";
import Projects from "../components/Projects.astro";
import Layout from "../layouts/Main.astro";

export const prerender = true;
---

<Layout title="Oleksandr Sh." description="UI engineer">
  <div class="flex flex-col gap-y-24">
    <MainSection />
    <div
      class="section bg-background text-on-background p-8 sticky top-0 flex flex-col gap-12"
    >
      <Contributions />
    </div>
  </div>
</Layout>

<style>
  .section {
    box-shadow: 0 -4px 16px theme("colors.on-background/0.2");
  }
</style>
