---
import Contributions from "../components/Contributions.astro";
import PostsSection from "../components/PostsSection.astro";
import Projects from "../components/Projects.astro";
import SocialLinks from "../components/SocialLinks.astro";
import ChevronDoubleDown from "../icons/chevron-double-down.astro";
import Logo from "../icons/logo.astro";
import Layout from "../layouts/Main.astro";

/**
TODO: 
- issues comments: https://github.com/giscus/giscus
- 
*/

export const prerender = true;
---

<Layout title="Oleksandr Sh." description="UI engineer">
  <div class="bg-primary text-on-primary flex h-full flex-col justify-between">
    <header
      class="flex flex-row items-baseline justify-between gap-4 p-6 sm:p-8"
    >
      <div class="flex flex-col gap-2">
        <h1 class="heading font-bold leading-[1.1em]">Oleksandr Sh.</h1>
        <div class="subheadline font-bold leading-[1.1em]">Web Developer</div>
      </div>
      <Logo class="h-12 w-12" aria-hidden="true" />
    </header>
    <PostsSection />
    <footer class="flex flex-row items-center justify-between p-6 sm:p-8">
      <a
        href="#contributions"
        class="bg-on-background text-on-primary outline-on-primary flex aspect-square items-center gap-2 rounded-full py-3 px-5 text-lg shadow-md outline-2 sm:aspect-auto"
      >
        <span class="hidden sm:inline">More</span>
        <ChevronDoubleDown class="h-5" aria-hidden="true" />
      </a>
      <SocialLinks class="md:gap-10" />
    </footer>
  </div>
  <div class="bg-stroke/10 h-px"></div>
  <div
    class="bg-background text-on-background sticky top-0 flex flex-col gap-12 p-8"
  >
    <Contributions />
  </div>
</Layout>

<style>
  .heading {
    font-size: clamp(3rem, 5vw, 5rem);
  }
  .subheadline {
    font-size: clamp(1.8rem, 3vw, 1.5rem);
  }
  .subheadline > span {
    text-shadow: 0 0 1px theme("colors.on-background/0.2");
  }
</style>
