---
import ChevronLeft from "../icons/chevron-left.astro";
import Logo from "../icons/logo.astro";

export interface Props {
  backLink: string;
}

const { backLink } = Astro.props;
---

<div class="flex flex-row items-center justify-between gap-4">
  <a
    href={backLink}
    class="group/link -ml-4 flex flex-row items-center gap-4 px-4"
  >
    <ChevronLeft
      aria-hidden="true"
      class="size-8 translate-x-1 stroke-2 transition-transform duration-200 group-hover/link:translate-x-0"
    />
    <slot name="back-link" />
  </a>
  <a
    href="/"
    aria-label="Main page"
    class="-focus:trnaslate-y-1 duration-300 hover:-translate-y-1"
    title="Main page"><Logo /></a
  >
</div>
