---
import ChevronDoubleDown from "../icons/chevron-double-down.astro";
import ChevronRight from "../icons/chevron-right.astro";
import Posts from "./Posts.astro";
import SocialLinks from "./SocialLinks.astro";
---

<section
  class="sticky top-0 h-[100lvh] lg:h-[100vh] flex flex-col justify-between bg-primary text-on-primary"
>
  <header class="p-6 sm:p-8 flex flex-col justify-center">
    <!-- <h1 class="text-6xl font-bold">Alesander Vechi</h1> -->
    <h1 class="heading">Oleksandr Sh.</h1>
    <div class="subheadline">User Experience Engineer</div>
  </header>
  <section class="notes" aria-labelledby="notes">
    <header
      class="snap-start shrink-0 max-w-[60%] flex flex-row gap-2 items-center"
    >
      <div class="flex flex-col gap-4">
        <h2 id="notes" class="text-4xl">Notes</h2>
        <p class="text-xl">Mostly web, but other things too.</p>
      </div>
      <ChevronRight class="h-16" />
    </header>
    <Posts class="contents" />
  </section>
  <footer class="p-6 sm:p-8 flex flex-row items-center justify-between">
    <a
      href="#contributions"
      class="rounded-full aspect-square sm:aspect-auto shadow-md outline-2 outline-on-primary bg-on-background text-background text-lg flex items-center gap-2 py-3 px-5"
    >
      <span class="hidden sm:inline">More</span>
      <ChevronDoubleDown class="h-5" aria-hidden="true" />
    </a>
    <SocialLinks class="md:gap-10" />
  </footer>
</section>

<style>
  .heading {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    line-height: 1.1;
  }
  .subheadline {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 500;
    line-height: 1.1;
    & > span {
      text-shadow: 0 0 1px theme("colors.on-background/0.2");
    }
  }
  .notes {
    --p: theme("spacing.8");
    scroll-padding-inline: var(--p);
    scroll-padding-block: var(--p);
    padding: var(--p);
    scroll-snap-type: x mandatory;

    @apply flex gap-8 overflow-auto;
  }
  .card {
    scroll-snap-align: start;
    inline-size: clamp(20rem, 90svw, 60vw);
    block-size: 25rem;
    flex-shrink: 0;
  }
</style>
