---
import ChevronDoubleDown from "../icons/chevron-double-down.astro";
import ChevronRight from "../icons/chevron-right.astro";
import Posts from "./Posts.astro";
import SocialLinks from "./SocialLinks.astro";
---

<section
  class="bg-primary text-on-primary flex h-full flex-col justify-between"
>
  <header class="flex flex-col justify-center gap-2 p-6 sm:p-8">
    <!-- <h1 class="text-6xl font-bold">Alesander Vechi</h1> -->
    <h1 class="heading">Oleksandr Sh.</h1>
    <div class="subheadline">Web Developer</div>
  </header>
  <section
    class="flex snap-x scroll-p-8 gap-8 overflow-auto p-8"
    aria-labelledby="notes"
  >
    <header
      class="flex max-w-[60%] shrink-0 snap-start flex-row items-center gap-2"
    >
      <div class="flex flex-col gap-4">
        <h2 id="notes" class="text-4xl">Notes</h2>
        <div>
          <p class="text-lg leading-5 sm:text-xl">
            Mostly web, but other things too.
          </p>
          <a href="/posts" class="leading-10 underline decoration-2">See all</a>
        </div>
      </div>
      <ChevronRight class="h-16" />
    </header>
    <Posts class="contents" />
    <footer class="h-full shrink-0 snap-end self-center">
      <a
        href="/posts"
        class="text-background bg-on-primary/5 outline-on-primary hover:bg-on-primary/10 focus:bg-on-primary/10 flex h-full items-center gap-2 rounded-2xl p-8 text-xl outline-2 transition-all duration-300"
        >See more <ChevronRight aria-hidden="true" class="h-5" /></a
      >
    </footer>
  </section>
  <footer class="flex flex-row items-center justify-between p-6 sm:p-8">
    <a
      href="#contributions"
      class="bg-on-background text-background outline-on-primary flex aspect-square items-center gap-2 rounded-full py-3 px-5 text-lg shadow-md outline-2 sm:aspect-auto"
    >
      <span class="hidden sm:inline">More</span>
      <ChevronDoubleDown class="h-5" aria-hidden="true" />
    </a>
    <SocialLinks class="md:gap-10" />
  </footer>
</section>

<style>
  .heading {
    font-size: clamp(2rem, 5vw, 5rem);
    font-weight: 600;
    line-height: 1.1;
  }
  .subheadline {
    font-size: clamp(1rem, 3vw, 1.5rem);
    font-weight: 500;
    line-height: 1.1;
  }
  .subheadline > span {
    text-shadow: 0 0 1px theme("colors.on-background/0.2");
  }
</style>
