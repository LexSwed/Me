---
import type { HTMLAttributes } from "astro/types";

import GithubIcon from "../icons/github.astro";
import LinkedinIcon from "../icons/linkedin.astro";
import TwitterIcon from "../icons/twitter.astro";
import DevToIcon from "../icons/devto.astro";

export type Props = HTMLAttributes<"ul">;

const { class: className, ...props } = Astro.props;

type Link = {
  href: string;
  // eslint-disable-next-line @typescript-eslint/no-unsafe-function-type
  Component: Function;
  label: string;
};

const links: Link[] = [
  {
    href: "https://github.com/LexSwed",
    Component: GithubIcon,
    label: "GitHub Profile",
  },
  {
    href: "https://www.linkedin.com/in/alvechy/",
    Component: LinkedinIcon,
    label: "LinkedIn Profile",
  },
  {
    href: "https://twitter.com/alvechy",
    Component: TwitterIcon,
    label: "Twitter Profile",
  },
  {
    href: "https://dev.to/alvechy",
    Component: DevToIcon,
    label: "Dev.to Profile",
  },
];
---

<ul {...props} class:list={["flex flex-row justify-start gap-4", className]}>
  {
    links.map((link) => (
      <li>
        <a
          href={link.href}
          aria-label={link.label}
          title={link.label}
          class="xs:size-12 focus:outline-on-primary block size-10 rounded-full p-2 transition-shadow duration-150 focus:outline-2"
          target="_blank"
        >
          <link.Component aria-hidden="true" />
        </a>
      </li>
    ))
  }
</ul>
