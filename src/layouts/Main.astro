---
import BaseHead from "../components/BaseHead.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-background text-on-background px-8">
    <slot />
  </body>
</html>
